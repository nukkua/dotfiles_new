# Colour Themes:
focused_border_colour    : #c0cbff
unfocused_border_colour  : #555555
swap_border_colour       : #fff4c0

# General Options:
gaps                    : 1
border_width            : 0
master_width            : 60 # Percentage of screen width
resize_master_amount    : 1
resize_stack_amt        : 20
snap_distance           : 5
motion_throttle         : 165 # Set to screen refresh rate for smoothest motions
should_float            : "pcmanfm"
new_win_focus           : true
warp_cursor             : false

# Keybinds:
# Commands must be surrounded with ""
# Function calls don't need this

mod_key : alt

#Executables

exec : xrandr --output LVDS1 --off
exec : asusctl profile -P performance
exec : feh --bg-fill ~/wallpapers/chainsawman.jpg
exec : xset r rate 250 40



exec : picom 
 


# Application Launchers:
bind : mod + space : "st"
bind : mod + c : "~/scripts/toogle_touchpad.sh"
bind : mod + i : "shutdown now"
bind : mod + y : "~/packages/zen/zen"
bind : mod + d : "discord"
bind : mod + a : "flameshot gui -c -p ~/Pictures/Screenshots"
bind : mod + e : "st ~/scripts/coding_session.sh"
bind : mod + o : "st ~/projects/main"
bind : mod + z : "vmware"


bind : mod + minus : "brightnessctl set 10%-"
bind : mod + m : "brightnessctl set 10%+"


bind : ctrl + m : "amixer -q set Master toggle"

bind : ctrl + up : "amixer -q set Master 5%+ unmute"
bind : ctrl + down : "amixer -q set Master 5%- unmute"


# Window Management:
call : mod + shift + q : close_window
call : mod + shift + e : quit

# Focus Movement:
call : mod + j : focus_next
call : mod + k : focus_prev

# Monitor Focus:
call : mod + comma : focus_prev_mon
call : mod + period : focus_next_mon

# Move Window Between Monitors:
call : mod + shift + comma : move_prev_mon
call : mod + shift + period : move_next_mon

# Master/Stack Movement
call : mod + shift + j : master_next
call : mod + shift + k : master_previous

# Master Area Resize
call : mod + l : master_increase
call : mod + h : master_decrease

# Stack Window Resize


# Floating/Fullscreen
call : mod + shift + space : global_floating
call : mod + shift + f : fullscreen

# Reload Config
call : mod + x: reload_config

#Some additional configs

open_in_workspace : zen : 1
# start_fullscreen	: "st-256color"
start_fullscreen	: "zen"

